{
  "compileOnSave": false,
  "include": [
    "server.ts",
    "./src/polyfills.ts",
    "./src/main.server.ts",
    "./src/main.ts"
  ],
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es2015",
    "lib": ["es2018", "dom"],
    "typeRoots": ["node_modules/@types"]
  }
}
